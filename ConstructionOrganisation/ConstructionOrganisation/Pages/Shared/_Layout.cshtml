<!DOCTYPE html>
<html lang="ru">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Строительная организация</title>    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .logout-btn {
        transition: all 0.3s ease;
        }
        .logout-btn:hover {
        transform: scale(1.05);
        text-decoration: underline;
        }
        .username-display {
        font-weight: 500;
        color: #0d6efd !important;
        margin-right: 15px;
        }
        .navbar-toggler {
        border: none;
        padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <img src="~/images/logo.png" height="110" class="d-inline-block align-top" alt="Логотип">
                    СтройУправление
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                aria-label="Переключить навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
                        {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Reports/Index">Отчеты</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Data/Tables">Таблицы</a>
                                </li>
                        }                       
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-primary">@Context.Session.GetString("Username")</span>
                            </li>
                                <li class="nav-item">
                                            <a class="nav-link" asp-page="/Account/Login" asp-route-logout="true">
                                                <i class="bi bi-box-arrow-right"></i> Выйти
                                            </a>                 
                                </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Войти
                                </a>
                            </li>
                        }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Строительная организация
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



@section Scripts {
            <script>
        document.getElementById('logoutForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            fetch(e.target.action, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            }).then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            });
        });
    </script>
}
<script>
    document.getElementById('logoutForm')?.addEventListener('submit', function(e) {
        e.preventDefault();
        fetch(e.target.action, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        }).then(response => {
            if (response.redirected) {
                window.location.href = response.url;
            }
        });
    });
</script>