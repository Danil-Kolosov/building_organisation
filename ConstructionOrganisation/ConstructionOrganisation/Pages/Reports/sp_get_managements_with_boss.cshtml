@page
@model ConstructionOrganisation.Pages.Reports.sp_get_managements_with_boss
@{
    ViewData["Title"] = "Управления с их начальниками";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    
                </div>
            </div>
            <div class="col-md-4 align-self-end">
                
            </div>
        </div>
    </form>

    @if (Model.ReportData != null && Model.ReportData.Any())
    {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Номер управления</th>
                                <th>Фамилия</th>
                                <th>Имя</th>
                                <th>Дата приема</th>
                                <th>Должность</th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model.ReportData)
                    {
                                        <tr>
                                            <td>@item.ManagementNumber</td>
                                            <td>@item.LastName</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.HireDate.ToString("dd.MM.yyyy")</td>
                                            <td>@item.GroupName</td>
                                        </tr>
                    }
                        </tbody>
                    </table>
                </div>
    }
    else if (Model.ReportData != null)
    {
                <div class="alert alert-warning">Данные не найдены</div>
    }
</div>