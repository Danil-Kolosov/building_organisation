@page
@model ConstructionOrganisation.Pages.Reports.sp_get_object_brigade_members
@{
    ViewData["Title"] = "Состав бригад на объекте";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="objectNumber">Номер объекта:</label>
                    <input type="number" class="form-control" id="objectNumber" 
                           name="objectNumber" value="@Model.ObjectNumber" />
                </div>
            </div>
            <div class="col-md-4 align-self-end">
                <button type="submit" class="btn btn-primary">Показать</button>
            </div>
        </div>
    </form>

    @if (Model.ReportData != null && Model.ReportData.Any())
    {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID бригады</th>
                            <th>Название бригады</th>
                            <th>Имя</th>
                            <th>Фамилия</th>
                            <th>Должность</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ReportData)
                    {
                                <tr>
                                    <td>@item.BrigadeID</td>
                                    <td>@item.BrigadeName</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.GroupName</td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
    else if (Model.ReportData != null)
    {
            <div class="alert alert-warning">Данные не найдены</div>
    }
</div>