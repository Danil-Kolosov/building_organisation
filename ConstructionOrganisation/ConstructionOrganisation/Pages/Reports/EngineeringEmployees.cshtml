@page
@model ConstructionOrganisation.Pages.Reports.EngineeringEmployeesModel
@{
    ViewData["Title"] = "Инженерный состав управления";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="managementId">ID управления:</label>
                    <input type="number" class="form-control" 
                           asp-for="ManagementId" min="1" />
                </div>
            </div>
            <div class="col-md-4 align-self-end">
                <button type="submit" class="btn btn-primary">Загрузить</button>
            </div>
        </div>
    </form>

    @if (Model.ReportData != null && Model.ReportData.Any())
    {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID участка</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Дата приема</th>
                            <th>Должность</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ReportData)
                    {
                                <tr>
                                    <td>@item.SectionNameID</td>
                                    <td>@item.LastName</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.HireDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.Position</td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
    else if (Model.ReportData != null)
    {
            <div class="alert alert-warning">Данные не найдены</div>
    }
</div>