@page
@model ConstructionOrganisation.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Выход из системы";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2>Вы успешно вышли из системы</h2>
            <p>Спасибо за использование нашего сервиса.</p>
            <a asp-page="/Account/Login" class="btn btn-primary">Войти снова</a>
            <a asp-page="/Index" class="btn btn-secondary">На главную</a>
        </div>
    </div>
</div>